{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./api/src",
    "outDir": "./dist",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "api/src/tests"]
}
